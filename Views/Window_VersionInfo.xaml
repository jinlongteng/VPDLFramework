<Window
    x:Class="VPDLFramework.Views.Window_VersionInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VPDLFramework.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{DynamicResource Lan.Window_VersionInfo.TitleVersionInfo}"
    Width="400"
    Height="200"
    Background="{DynamicResource Color_DarkBackground}"
    Foreground="White"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="1" />
        <Grid Margin="5">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border Margin="40,0">
                    <Border>
                        <!--<Image
                        Margin="5"
                        Source="..\Resources\Images\abb.png"
                        Stretch="Uniform" />-->
                        <Image
                            Margin="5"
                            Source="..\Resources\Images\Cognex_Logo_Yellow.png"
                            Stretch="Uniform" />
                    </Border>
                </Border>
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="{StaticResource string_ProgramName}" />
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{DynamicResource Lan.Window_VersionInfo.TextVersion}" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="{StaticResource string_MajorVersion}" />
                        <TextBlock VerticalAlignment="Center" Text="." />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="{StaticResource string_MinorVersion}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontWeight="Bold"
                        Text="{DynamicResource Lan.Window_VersionInfo.TextSoftwareEnvironment}" />
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="ABBVision " />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="{StaticResource string_VisionProVersion}" />
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="ABB Vision Deep Learning " />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="{StaticResource string_VPDLVersion}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
