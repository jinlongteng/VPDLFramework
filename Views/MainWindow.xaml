<Window
    x:Class="VPDLFramework.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:aui="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:VPDLFramework.Views"
    x:Name="mainwin"
    Title="{Binding Title}"
    Width="1200"
    Height="800"
    AllowsTransparency="False"
    Background="{StaticResource Color_DarkBackground}"
    Closing="mainwin_Closing"
    DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
    FontSize="12"
    Foreground="WhiteSmoke"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.Style>
        <Style TargetType="Window">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsOnlineMode}" Value="True">
                    <Setter Property="WindowStyle" Value="None" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Style>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="55" />
                <RowDefinition />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>

            <!--  顶部Logo栏  -->
            <Grid x:Name="logoGrid">
                <Border
                    Background="Black"
                    BorderBrush="{StaticResource Color_MainColor}"
                    BorderThickness="0,0,0,2">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAlarm}" Value="True">
                                    <Setter Property="Background" Value="#DD2C00" />
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard x:Name="alarmStoryboard">
                                            <Storyboard>
                                                <ColorAnimationUsingKeyFrames RepeatBehavior="Forever" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)">
                                                    <LinearColorKeyFrame KeyTime="0:0:0" Value="#DD2C00" />
                                                    <LinearColorKeyFrame KeyTime="0:0:1" Value="#53261f" />
                                                </ColorAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsAlarm}" Value="False">
                                    <Setter Property="Opacity" Value="1" />
                                    <DataTrigger.EnterActions>
                                        <RemoveStoryboard BeginStoryboardName="alarmStoryboard" />
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="240" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="320" />
                    </Grid.ColumnDefinitions>
                    <Border Background="{StaticResource Color_MainColor}">
                        <StackPanel Orientation="Horizontal">
                            <ToggleButton
                                x:Name="btnProjectList"
                                Width="40"
                                Height="40"
                                Margin="2"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Content="&#xe622;"
                                FontFamily="{StaticResource Font_Ico}"
                                FontSize="30"
                                Foreground="Black"
                                IsChecked="{Binding IsShowWorkList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                ToolTip="{DynamicResource Lan.MainWin.MenuBar.BtnWorkList}" />
                            <Image
                                Width="180"
                                Margin="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Source="../Resources/Images/Cognex_Logo_Black.png"
                                Stretch="Uniform" />
                        </StackPanel>
                    </Border>
                    <Border
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                        <TextBlock
                            Margin="5,0,5,8"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            Focusable="False"
                            FontFamily="../Resources/Font/#创客贴金刚体"
                            FontSize="45"
                            FontWeight="Bold"
                            InputMethod.IsInputMethodEnabled="False"
                            Text="{Binding WorkTitle}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsWorkLoaded}" Value="False">
                                            <Setter Property="Foreground" Value="White" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsWorkLoaded}" Value="True">
                                            <Setter Property="Foreground" Value="White" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                    <Grid Grid.Column="2" HorizontalAlignment="Right">
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <Button
                                Width="40"
                                Height="40"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding CmdClearAlarm}"
                                Content="&#xe6f4;"
                                FontFamily="{StaticResource Font_Ico}"
                                FontSize="30"
                                Foreground="{StaticResource Color_MainColor}"
                                ToolTip="清除警报"
                                Visibility="{Binding IsAlarm, Converter={StaticResource BoolToVisiblityDefaultVisibleCvt}}" />
                            <Button
                                Width="40"
                                Height="40"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding CmdSetSystemOnline}"
                                FontFamily="{StaticResource Font_Ico}"
                                FontSize="30"
                                Foreground="{Binding IsOnlineMode, Converter={StaticResource BoolToColorSpringGreenRedCvt}}"
                                IsEnabled="{Binding IsWorkLoaded}"
                                ToolTip="{DynamicResource Lan.MainWin.MenuBar.BtnOnLine}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsOnlineMode}" Value="true">
                                                <Setter Property="Content" Value="&#xea89;" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsOnlineMode}" Value="false">
                                                <Setter Property="Content" Value="&#xe71b;" />
                                            </DataTrigger>
                                            <Trigger Property="IsEnabled" Value="True">
                                                <Setter Property="Background" Value="Transparent" />
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="Transparent" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button
                                x:Name="btnLog"
                                Width="40"
                                Height="40"
                                Padding="2"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="btnLog_Click"
                                Content="&#xe6b8;"
                                FontFamily="{StaticResource Font_Ico}"
                                FontSize="30"
                                ToolTip="{DynamicResource Lan.MainWin.MenuBar.BtnSystemLog}">
                                <Button.Style>
                                    <Style BasedOn="{StaticResource Style_Button_Ico}" TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="Black" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="False">
                                                <Setter Property="Foreground" Value="LightGray" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button
                                Width="40"
                                Height="40"
                                Padding="2"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding CmdOpenSystemSetup}"
                                Content="&#xe74c;"
                                FontFamily="{StaticResource Font_Ico}"
                                FontSize="30"
                                IsEnabled="{Binding IsOnlineMode, Converter={StaticResource BoolInverseCvt}}"
                                ToolTip="{DynamicResource Lan.MainWin.MenuBar.BtnSystemSetup}">
                                <Button.Style>
                                    <Style BasedOn="{StaticResource Style_Button_Ico}" TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="Black" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="False">
                                                <Setter Property="Foreground" Value="LightGray" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button
                                Width="40"
                                Height="40"
                                Padding="2"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding CmdOpenFileManager}"
                                Content="&#xe61a;"
                                FontFamily="{StaticResource Font_Ico}"
                                FontSize="30"
                                IsEnabled="{Binding IsWorkLoaded, Converter={StaticResource BoolInverseCvt}}"
                                ToolTip="{DynamicResource Lan.MainWin.MenuBar.BtnFileManager}">
                                <Button.Style>
                                    <Style BasedOn="{StaticResource Style_Button_Ico}" TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="Black" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="False">
                                                <Setter Property="Foreground" Value="LightGray" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button
                                Width="40"
                                Height="40"
                                Padding="2"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding CmdOpenVersionInfo}"
                                Content="&#xe60c;"
                                FontFamily="{StaticResource Font_Ico}"
                                FontSize="30"
                                ToolTip="{DynamicResource Lan.MainWin.MenuBar.BtnVersionInfo}">
                                <Button.Style>
                                    <Style BasedOn="{StaticResource Style_Button_Ico}" TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="Black" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="False">
                                                <Setter Property="Foreground" Value="LightGray" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <ToggleButton
                                x:Name="btnLogin"
                                Width="40"
                                Height="40"
                                Padding="2"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding CmdLoadContentView}"
                                CommandParameter="UserView"
                                Content="&#xe8c8;"
                                FontFamily="{StaticResource Font_Ico}"
                                FontSize="30"
                                ToolTip="{DynamicResource Lan.MainWin.MenuBar.BtnUserLogin}">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLogin}" Value="True">
                                                <Setter Property="Foreground" Value="#426ab3" />
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="False">
                                                <Setter Property="Foreground" Value="LightGray" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                            <Button
                                Width="40"
                                Height="40"
                                Padding="2"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding CmdOpenHelp}"
                                Content="&#xe619;"
                                FontFamily="{StaticResource Font_Ico}"
                                FontSize="30"
                                ToolTip="{DynamicResource Lan.MainWin.MenuBar.BtnHelp}">
                                <Button.Style>
                                    <Style BasedOn="{StaticResource Style_Button_Ico}" TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="Black" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="False">
                                                <Setter Property="Foreground" Value="LightGray" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>

            <!--  登录弹窗  -->
            <Popup
                x:Name="pop"
                Width="350"
                Height="280"
                AllowsTransparency="False"
                IsOpen="{Binding ElementName=btnLogin, Path=IsChecked}"
                Placement="Bottom"
                PlacementTarget="{Binding ElementName=btnLogin}"
                PopupAnimation="Slide"
                StaysOpen="False">
                <Border
                    Background="{DynamicResource Color_DarkBackground}"
                    BorderBrush="LightGray"
                    BorderThickness="2">
                    <views:Control_UserLogin InputPwd="{Binding Password, Mode=OneWayToSource}" />
                </Border>
            </Popup>

            <!--  中间区域：工作列表，编辑区/运行区，日志区  -->
            <Border
                Grid.Row="1"
                BorderBrush="Gray"
                BorderThickness="0,2">
                <Grid x:Name="midGrid" Grid.Row="1">
                    <DockPanel>
                        <!--  工程目录  -->
                        <views:Control_WorkList DockPanel.Dock="Left">
                            <views:Control_WorkList.Style>
                                <Style TargetType="views:Control_WorkList">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsShowWorkList}" Value="True">
                                            <Setter Property="Width" Value="240" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsShowWorkList}" Value="False">
                                            <Setter Property="Width" Value="0" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsOnlineMode}" Value="True">
                                            <Setter Property="Width" Value="0" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </views:Control_WorkList.Style>
                        </views:Control_WorkList>

                        <!--  编辑区/运行区  -->
                        <Grid DockPanel.Dock="Right">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="2" />
                                <RowDefinition x:Name="logRow" Height="200" />
                            </Grid.RowDefinitions>
                            <GridSplitter
                                x:Name="logSplitter"
                                Grid.Row="1"
                                HorizontalAlignment="Stretch"
                                Background="Transparent" />
                            <Border
                                Margin="2"
                                BorderBrush="Gray"
                                BorderThickness="2">
                                <ContentControl Margin="0,2" Content="{Binding ContentView}" />
                            </Border>
                            <views:Control_SystemLog Grid.Row="2" />
                        </Grid>
                    </DockPanel>
                </Grid>
            </Border>

            <!--  状态栏  -->
            <Grid Grid.Row="2">
                <StatusBar Background="{StaticResource Color_DarkBackground}" Foreground="White">
                    <StatusBarItem>
                        <TextBlock VerticalAlignment="Center" Text="{DynamicResource Lan.MainWin.StatusBar.TextStatusMonitor}" />
                    </StatusBarItem>
                    <Separator />
                    <StatusBarItem DataContext="{Binding Source={StaticResource Locator}, Path=WorkRuntime}">
                        <StatusBarItem.Style>
                            <Style TargetType="StatusBarItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate>
                                            <Grid>
                                                <StackPanel Orientation="Horizontal">
                                                    <Grid MinWidth="200" Margin="1">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="60" />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Text="{DynamicResource Lan.MainWin.StatusBar.TextCamera}" />
                                                        <ListView
                                                            Grid.Column="1"
                                                            Foreground="Black"
                                                            ItemsSource="{Binding WorkImageSources}">
                                                            <ListView.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <WrapPanel Orientation="Horizontal" />
                                                                </ItemsPanelTemplate>
                                                            </ListView.ItemsPanel>
                                                            <ListView.ItemContainerStyle>
                                                                <Style TargetType="ListViewItem">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="ListViewItem">
                                                                                <Border
                                                                                    Width="16"
                                                                                    Height="16"
                                                                                    Margin="1"
                                                                                    CornerRadius="2">
                                                                                    <Border.Style>
                                                                                        <Style TargetType="Border">
                                                                                            <Style.Triggers>
                                                                                                <DataTrigger Binding="{Binding ImageSourceInfo.IsOnline}" Value="true">
                                                                                                    <Setter Property="Background" Value="LimeGreen" />
                                                                                                </DataTrigger>
                                                                                                <DataTrigger Binding="{Binding ImageSourceInfo.IsOnline}" Value="false">
                                                                                                    <Setter Property="Background" Value="{StaticResource Color_Red}" />
                                                                                                </DataTrigger>
                                                                                                <DataTrigger Binding="{Binding ImageSourceInfo.IsUseCam}" Value="false">
                                                                                                    <Setter Property="Background" Value="Gray" />
                                                                                                </DataTrigger>
                                                                                            </Style.Triggers>
                                                                                        </Style>
                                                                                    </Border.Style>
                                                                                    <TextBlock
                                                                                        HorizontalAlignment="Center"
                                                                                        VerticalAlignment="Center"
                                                                                        FontFamily="{StaticResource Font_Ico}"
                                                                                        Foreground="Black"
                                                                                        Text="&#xe969;">
                                                                                        <TextBlock.Style>
                                                                                            <Style TargetType="TextBlock">
                                                                                                <Style.Triggers>
                                                                                                    <DataTrigger Binding="{Binding ImageSourceInfo.IsUseCam}" Value="false">
                                                                                                        <Setter Property="ToolTip" Value="{Binding ImageSourceInfo.ImageSourceName}" />
                                                                                                    </DataTrigger>
                                                                                                    <DataTrigger Binding="{Binding ImageSourceInfo.IsUseCam}" Value="true">
                                                                                                        <Setter Property="ToolTip" Value="{Binding CameraSerialNumName}" />
                                                                                                    </DataTrigger>
                                                                                                </Style.Triggers>
                                                                                            </Style>
                                                                                        </TextBlock.Style>
                                                                                    </TextBlock>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </ListView.ItemContainerStyle>
                                                        </ListView>
                                                    </Grid>
                                                    <Grid MinWidth="200" Margin="1">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="40" />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Text="TCP:" />
                                                        <ListView
                                                            x:Name="clientsPanel"
                                                            Grid.Column="1"
                                                            Foreground="Black"
                                                            ItemsSource="{Binding WorkTCPDevices}">
                                                            <ListView.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <WrapPanel Orientation="Horizontal" />
                                                                </ItemsPanelTemplate>
                                                            </ListView.ItemsPanel>
                                                            <ListView.ItemContainerStyle>
                                                                <Style TargetType="ListViewItem">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="ListViewItem">
                                                                                <Border
                                                                                    Width="16"
                                                                                    Height="16"
                                                                                    Margin="1"
                                                                                    CornerRadius="2">
                                                                                    <Border.Style>
                                                                                        <Style TargetType="Border">
                                                                                            <Style.Triggers>
                                                                                                <DataTrigger Binding="{Binding TCPDeviceInfo.Status}" Value="false">
                                                                                                    <Setter Property="Background" Value="{StaticResource Color_Red}" />
                                                                                                </DataTrigger>
                                                                                                <DataTrigger Binding="{Binding TCPDeviceInfo.Status}" Value="true">
                                                                                                    <Setter Property="Background" Value="LimeGreen" />
                                                                                                </DataTrigger>
                                                                                            </Style.Triggers>
                                                                                        </Style>
                                                                                    </Border.Style>
                                                                                    <TextBlock
                                                                                        HorizontalAlignment="Center"
                                                                                        VerticalAlignment="Center"
                                                                                        FontFamily="{StaticResource Font_Ico}"
                                                                                        Foreground="Black"
                                                                                        Text="&#xe6c9;">
                                                                                        <TextBlock.ToolTip>
                                                                                            <MultiBinding Converter="{StaticResource ConcatStringConverterCvt}">
                                                                                                <Binding Path="TCPDeviceInfo.TCPDeviceName" />
                                                                                                <Binding Path="TCPDeviceInfo.IPAddress" />
                                                                                                <Binding Path="TCPDeviceInfo.Port" />
                                                                                            </MultiBinding>
                                                                                        </TextBlock.ToolTip>
                                                                                    </TextBlock>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </ListView.ItemContainerStyle>
                                                        </ListView>
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </StatusBarItem.Style>
                    </StatusBarItem>
                    <StatusBarItem DataContext="{Binding Source={StaticResource Locator}, Path=CommCard}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" Text="CC24:" />
                            <Border
                                Width="16"
                                Height="16"
                                Margin="5,0"
                                CornerRadius="2">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCardExist}" Value="false">
                                                <Setter Property="Background" Value="Gray" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsCardExist}" Value="true">
                                                <Setter Property="Background" Value="LimeGreen" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource Font_Ico}"
                                    Foreground="Black"
                                    Text="&#xe6ee;" />
                            </Border>
                        </StackPanel>
                    </StatusBarItem>
                    <Separator />
                    <StatusBarItem DataContext="{Binding WindowsSystemInfo}">
                        <StatusBarItem.Style>
                            <Style TargetType="StatusBarItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate>
                                            <Grid>
                                                <StackPanel Orientation="Horizontal">
                                                    <Grid MinWidth="150" Margin="1">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="30" />
                                                            <ColumnDefinition />
                                                            <ColumnDefinition Width="30" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Text="CPU:" />
                                                        <ProgressBar
                                                            Grid.Column="1"
                                                            Margin="3"
                                                            Foreground="#45b97c"
                                                            Value="{Binding CPUUsage}" />
                                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                            <TextBlock VerticalAlignment="Center" Text="{Binding CPUUsage}" />
                                                            <TextBlock VerticalAlignment="Center" Text="%" />
                                                        </StackPanel>
                                                    </Grid>
                                                    <Grid MinWidth="150" Margin="1">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="30" />
                                                            <ColumnDefinition />
                                                            <ColumnDefinition Width="30" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Text="RAM:" />
                                                        <ProgressBar
                                                            Grid.Column="1"
                                                            Margin="3"
                                                            Foreground="#45b97c"
                                                            Value="{Binding RAMUsage}" />
                                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                            <TextBlock VerticalAlignment="Center" Text="{Binding RAMUsage}" />
                                                            <TextBlock VerticalAlignment="Center" Text="%" />
                                                        </StackPanel>
                                                    </Grid>
                                                    <Grid MinWidth="200" Margin="1">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="30" />
                                                            <ColumnDefinition />
                                                            <ColumnDefinition Width="80" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Text="{DynamicResource Lan.MainWin.StatusBar.TextHDD}"
                                                            ToolTip="{Binding DiskName}" />
                                                        <ProgressBar
                                                            Grid.Column="1"
                                                            Margin="3"
                                                            Foreground="#45b97c"
                                                            Value="{Binding DiskUsage}" />
                                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                            <TextBlock VerticalAlignment="Center" Text="{Binding DiskUsedSize}" />
                                                            <TextBlock VerticalAlignment="Center" Text="G/" />
                                                            <TextBlock VerticalAlignment="Center" Text="{Binding DiskTotalSize}" />
                                                            <TextBlock VerticalAlignment="Center" Text="G" />
                                                        </StackPanel>
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </StatusBarItem.Style>
                    </StatusBarItem>
                    <StatusBarItem HorizontalAlignment="Right">
                        <StackPanel Margin="10,0" Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Font_Ico}"
                                FontSize="14"
                                Text="&#xe646;" />
                            <TextBlock Margin="10,0,5,0" Text="{Binding Date}" />
                            <Border
                                x:Name="border_systemTCPStatus"
                                Width="15"
                                Height="15"
                                CornerRadius="10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSystemTCPOpened}" Value="true">
                                                <Setter Property="Background" Value="#45b97c" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsSystemTCPOpened}" Value="false">
                                                <Setter Property="Background" Value="Gray" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsSystemTCPOpened}" Value="true">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimationUsingKeyFrames RepeatBehavior="Forever" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)">
                                                                <LinearColorKeyFrame KeyTime="0:0:0" Value="#45b97c" />
                                                                <LinearColorKeyFrame KeyTime="0:0:0.5" Value="#122e29" />
                                                            </ColorAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </BeginStoryboard>
