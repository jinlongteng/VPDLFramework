<Window
    x:Class="VPDLFramework.Views.Window_StartupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VPDLFramework.Views"
    xmlns:localModels="clr-namespace:VPDLFramework.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="600"
    Height="400"
    FontFamily="Segoe UI Variable"
    AllowsTransparency="True"
    Background="#00FFFFFF"
    Foreground="White"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="borderStyle" TargetType="Border">
            <Setter Property="Width" Value="10" />
            <Setter Property="Height" Value="20" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Background" Value="White" />
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        </Style>
    </Window.Resources>
    <Window.Effect>
        <DropShadowEffect
            BlurRadius="20"
            Direction="-90"
            Opacity="0.7"
            RenderingBias="Quality" />
    </Window.Effect>
    <Grid Margin="20">
        <Border
            Background="{DynamicResource Color_DarkBackground}"
            BorderBrush="LightGray"
            BorderThickness="5"
            CornerRadius="0">
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="120" />
                    </Grid.RowDefinitions>
                    <Border CornerRadius="10 10 0 0">
                        <StackPanel VerticalAlignment="Center">
                            <!--<Image
                            Width="200"
                            Margin="10"
                            Source="../Resources/Images/abb.png"
                            Stretch="Uniform" />
                            <TextBlock
                            HorizontalAlignment="Center"
                            FontFamily="Heiti"
                            FontSize="28"
                            FontWeight="ExtraBold"
                            Text="VISION FRAMEWORK" />-->
                            <Image
                                Width="500"
                                Margin="10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Source="../Resources/Images/Cognex_Logo_Yellow.png"
                                Stretch="Uniform" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="28"
                                FontWeight="ExtraBold"
                                Text="VISIONPRO FRAMEWORK" />
                        </StackPanel>
                    </Border>
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="20" />
                        </Grid.RowDefinitions>
                        <Grid
                            x:Name="animationCanvas"
                            Width="50"
                            Height="50"
                            VerticalAlignment="Top"
                            RenderTransformOrigin="0.5 0.5">
                            <Grid.RenderTransform>
                                <RotateTransform x:Name="rt" />
                            </Grid.RenderTransform>
                            <Grid.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard x:Name="animate">
                                            <DoubleAnimationUsingKeyFrames
                                                RepeatBehavior="Forever"
                                                Storyboard.TargetName="animationCanvas"
                                                Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)">
                                                <DiscreteDoubleKeyFrame KeyTime="0:0:0.1" Value="45" />
                                                <DiscreteDoubleKeyFrame KeyTime="0:0:0.2" Value="90" />
                                                <DiscreteDoubleKeyFrame KeyTime="0:0:0.3" Value="135" />
                                                <DiscreteDoubleKeyFrame KeyTime="0:0:0.4" Value="180" />
                                                <DiscreteDoubleKeyFrame KeyTime="0:0:0.5" Value="225" />
                                                <DiscreteDoubleKeyFrame KeyTime="0:0:0.6" Value="270" />
                                                <DiscreteDoubleKeyFrame KeyTime="0:0:0.7" Value="315" />
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Grid.Triggers>
                            <Border Opacity="0.5" Style="{StaticResource borderStyle}">
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform Y="-20" />
                                        <RotateTransform Angle="0" />
                                    </TransformGroup>
                                </Border.RenderTransform>
                            </Border>
                            <Border Opacity="0.6" Style="{StaticResource borderStyle}">
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform Y="-20" />
                                        <RotateTransform Angle="45" />
                                    </TransformGroup>
                                </Border.RenderTransform>
                            </Border>
                            <Border Opacity="0.7" Style="{StaticResource borderStyle}">
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform Y="-20" />
                                        <RotateTransform Angle="90" />
                                    </TransformGroup>
                                </Border.RenderTransform>
                            </Border>
                            <Border Opacity="0.8" Style="{StaticResource borderStyle}">
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform Y="-20" />
                                        <RotateTransform Angle="135" />
                                    </TransformGroup>
                                </Border.RenderTransform>
                            </Border>
                            <Border Opacity="0.9" Style="{StaticResource borderStyle}">
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform Y="-20" />
                                        <RotateTransform Angle="180" />
                                    </TransformGroup>
                                </Border.RenderTransform>
                            </Border>
                            <Border Opacity="0.3" Style="{StaticResource borderStyle}">
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform Y="-20" />
                                        <RotateTransform Angle="225" />
                                    </TransformGroup>
                                </Border.RenderTransform>
                            </Border>
                            <Border Opacity="0.3" Style="{StaticResource borderStyle}">
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform Y="-20" />
                                        <RotateTransform Angle="270" />
                                    </TransformGroup>
                                </Border.RenderTransform>
                            </Border>
                            <Border Opacity="0.3" Style="{StaticResource borderStyle}">
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform Y="-20" />
                                        <RotateTransform Angle="315" />
                                    </TransformGroup>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                        <Border Grid.Row="1" CornerRadius="0 0 10 10">
                            <TextBlock
                                x:Name="textProgress"
                                Margin="5,0"
                                Padding="2"
                                VerticalAlignment="Center"
                                FontFamily="Arial,YaHei" />
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
